<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_all_product_item_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_search_bg">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/view_all_product_image"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="left"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/view_all_product_bookmark"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@mipmap/ic_bookmark" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/view_all_product_name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:text="Cookies"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:gravity="right">

                <TextView
                    android:id="@+id/view_all_product_price"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:gravity="right|center"
                    android:textColor="@color/hh_green_light2"
                    android:textSize="14sp"
                    android:maxLines="1"
                    />

                <TextView
                    android:id="@+id/view_all_product_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@string/font_family_regular"
                    android:gravity="right|center"
                    android:textColor="@color/hh_green_light2"
                    android:textSize="14sp"
                    android:maxLines="1"/>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>