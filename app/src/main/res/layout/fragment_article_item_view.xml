<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="392dp"
    android:background="@mipmap/ic_article_bg">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/artccal_image"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@drawable/artical" />

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="top|right"
                android:scaleType="center"
                android:src="@mipmap/ic_bookmark" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:paddingStart="16dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="@color/hh_green_light3"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="12dp"
                android:layout_gravity="left|center"
                android:background="@mipmap/ic_tag_item_icon"
                android:backgroundTint="@color/hh_blue_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:text="Nutrition"
                android:textColor="@color/hh_blue_light"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/author_pic"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_tag_item_icon" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:gravity="left|center"
                    android:text="Abhishek" />

            </LinearLayout>

            <TextView
                android:id="@+id/artical_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:maxLines="3"
                android:text="HH JJ  vv  nbvbnvbvbv nvn vnvnvn bvnvv  n nn H JJ  vv  nbvbnvbvbv nvn vnvnvn bvnvv  n nn "
                android:textColor="@color/hh_edittext_text_color"
                android:textSize="16sp" />


            <!-- <TextView
                 android:id="@+id/notes_about"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginEnd="16dp"
                 android:layout_marginStart="16dp"
                 android:layout_marginTop="10dp"
                 android:fontFamily="@string/font_family_regular"
                 android:gravity="left|center"
                 android:textColor="@color/hh_text_color"
                 android:textSize="14sp"
                 android:text="Notes about gg gjg "/>-->

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hash_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_regular"
            android:layout_marginBottom="12dp"
            android:textSize="14sp"
            android:textColor="@color/hh_green_light2"
            android:text="#Detox" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|center"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/reading_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:text="23 mnh 12"
                android:textColor="@color/hh_edittext_hint_color"
                android:textSize="12sp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/artical_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="right|center"
                android:text="12 ghg 67"
                android:textColor="@color/hh_edittext_hint_color"
                android:textSize="12sp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>