<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include layout="@layout/facebook_gmail_view"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:weightSum="3">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="left|center"
            android:background="@color/hh_line_color"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@string/font_family_regular"
            android:textSize="16sp"
            android:textColor="@color/hh_text_color"
            android:text="@string/or"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right|center"
            android:background="@color/hh_line_color"
            android:layout_marginStart="3dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginEnd="16dp">

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:fontFamily="@string/font_family_regular"
            android:textColorHint="@color/hh_edittext_hint_color"
            android:textColor="@color/hh_edittext_text_color"
            android:inputType="textVisiblePassword"
            android:completionThreshold="100"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:layout_marginTop="39dp"
            android:textSize="16sp"
            android:fontFamily="@string/font_family_regular"
            android:textColorHint="@color/hh_edittext_hint_color"
            android:textColor="@color/hh_edittext_text_color"
            android:password="true" />

    </LinearLayout>

</LinearLayout>