<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="16dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/sponsored_article_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="left|center"
            android:layout_gravity="left|center"
            android:fontFamily="@string/font_family_regular"
            android:text="Sponsored"
            android:layout_weight="1"
            android:textColor="@color/hh_edittext_hint_color"
            />

        <LinearLayout
            android:id="@+id/cross_image"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:gravity="right|center"
            android:layout_gravity="right|center"
            android:layout_weight="1">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_cross"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sponsored_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/hh_line_color"/>

</LinearLayout>