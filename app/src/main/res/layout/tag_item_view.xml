<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/tag_view"
    android:layout_height="36dp"
    android:background="@drawable/tag_item_bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:gravity="left|center"
        android:paddingStart="8dp">

        <ImageView
            android:id="@+id/tag_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_exercise"
            android:layout_marginEnd="8dp"
            android:layout_gravity="left|center"
            android:backgroundTint="@color/hh_green_light2"
            />

        <TextView
            android:id="@+id/tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exercise"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@color/hh_green_light2"
            android:fontFamily="@string/font_family_medium"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="9dp">
        <ImageView
            android:id="@+id/plus"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@mipmap/ic_plus"
            android:layout_marginEnd="1dp"
            android:layout_gravity="right|center"
            android:backgroundTint="#33000000"/>

        <ImageView
            android:id="@+id/check"
            android:layout_width="11dp"
            android:layout_height="8dp"
            android:src="@mipmap/ic_check"
            android:backgroundTint="#FFFFFF"
            android:layout_gravity="right|center" />

    </FrameLayout>
</RelativeLayout>