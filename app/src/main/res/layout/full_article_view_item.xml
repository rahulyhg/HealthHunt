<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/hh_background_light"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/full_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <include layout="@layout/full_article_item_image_view" />
        <include layout="@layout/full_article_view_content_item"/>
        <include layout="@layout/related_article_view"
                 android:visibility="gone"/>
        <include layout="@layout/related_products_article_view"
            android:visibility="gone"/>
        <include layout="@layout/full_article_about_view"/>
        <include layout="@layout/full_article_comment_view" />

    </LinearLayout>
</ScrollView>