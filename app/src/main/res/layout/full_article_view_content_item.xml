<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/full_article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_medium"
            android:gravity="left"
            android:maxLines="3"
            android:textColor="@color/hh_edittext_text_color"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/author_pic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:background="@drawable/profile_oval_shape"
                android:src="@drawable/top_products" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <TextView
                    android:id="@+id/author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="left|center"
                    android:gravity="left"
                    android:text="Abhishek"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="14sp"
                    android:textColor="@color/hh_edittext_text_color"
                    />

                <TextView
                    android:id="@+id/author_publish_date"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="left|center"
                    android:gravity="left"
                    android:text="Abhishek"
                    android:fontFamily="@string/font_family_regular"
                    android:textSize="14sp"
                    android:textColor="@color/hh_edittext_hint_color"
                    />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/full_article_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@string/font_family_regular"
            android:textSize="16sp"
            android:textColor="@color/hh_edittext_text_color"
            android:gravity="left"
            android:text="hgjggjhg ggghgjhg  g jgj " />

        <TextView
            android:id="@+id/full_article_hash_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@string/font_family_medium"
            android:textSize="16sp"
            android:gravity="left"
            android:textColor="@color/hh_text_color" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/hh_line_color"></View>

</LinearLayout>