<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_product_item_view"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:background="@mipmap/ic_article_bg">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="left"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/product_bookmark"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="top|right"
            android:scaleType="center"
            android:src="@mipmap/ic_bookmark" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:weightSum="2"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="left|center"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/top_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:textColor="@color/hh_edittext_text_color"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/top_product_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="left|center"
                android:textColor="@color/hh_text_color"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/price_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|center"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/top_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="right|center"
                android:textColor="@color/hh_green_light2"
                android:textSize="16sp"
                android:maxLength="10"/>

            <TextView
                android:id="@+id/top_product_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/font_family_regular"
                android:gravity="right|bottom"
                android:layout_marginStart="1dp"
                android:textColor="@color/hh_green_light2"
                android:textSize="16sp"
                android:maxLength="10"/>
        </LinearLayout>

        <TextView
            android:id="@+id/free_trail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@string/font_family_regular"
            android:gravity="right|center"
            android:layout_gravity="bottom"
            android:layout_marginStart="1dp"
            android:textColor="@color/hh_green_light2"
            android:textSize="16sp"
            android:visibility="gone"
            android:text="@string/free_trial"/>
    </LinearLayout>

</RelativeLayout>